[Unit]
Description=VnExpress News Scraper API
After=network.target

[Service]
Type=exec
User=www-data
Group=www-data
WorkingDirectory=/home/duong/Documents/Viet News
Environment=PATH=/home/duong/Documents/Viet News/venv/bin
ExecStart=/home/duong/Documents/Viet News/venv/bin/gunicorn -c gunicorn.conf.py main:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target